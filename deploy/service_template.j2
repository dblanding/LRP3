[Unit]
Description={{ service_name }}
After=mosquitto.service

[Service]
Type=simple
Restart={{ restart }}
WorkingDirectory=/home/{{ pi_user }}/
ExecStart=/usr/local/bin/robotpython -u {{ command }}
KillSignal=SIGINT
TimeoutStopSec=2
User={{ service_user }}
Environment="XDG_RUNTIME_DIR=/run/user/{{ service_uid }}"

[Install]
WantedBy=multi-user.target
